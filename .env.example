# OpenZeppelin Defender Configuration
# Get these from your Defender dashboard: https://defender.openzeppelin.com/
DEFENDER_API_KEY=your_defender_api_key_here
DEFENDER_API_SECRET=your_defender_api_secret_here

# Defender Relayer Configuration
# The address of your Defender Relayer
DEFENDER_RELAYER_ADDRESS=0x1234567890123456789012345678901234567890

# Multi-signature Safe Configuration (if using)
# Address of your Gnosis Safe or similar multi-sig wallet
DEFENDER_SAFE_ADDRESS=0x0987654321098765432109876543210987654321

# Network Configuration
# Ethereum Networks
MAINNET_RPC_URL=https://mainnet.infura.io/v3/YOUR_INFURA_KEY
SEPOLIA_RPC_URL=https://sepolia.infura.io/v3/YOUR_INFURA_KEY
GOERLI_RPC_URL=https://goerli.infura.io/v3/YOUR_INFURA_KEY

# Polygon Networks
POLYGON_RPC_URL=https://polygon-mainnet.infura.io/v3/YOUR_INFURA_KEY
POLYGON_MUMBAI_RPC_URL=https://polygon-mumbai.infura.io/v3/YOUR_INFURA_KEY

# Arbitrum Networks
ARBITRUM_RPC_URL=https://arbitrum-mainnet.infura.io/v3/YOUR_INFURA_KEY
ARBITRUM_GOERLI_RPC_URL=https://arbitrum-goerli.infura.io/v3/YOUR_INFURA_KEY

# Optimism Networks
OPTIMISM_RPC_URL=https://optimism-mainnet.infura.io/v3/YOUR_INFURA_KEY
OPTIMISM_GOERLI_RPC_URL=https://optimism-goerli.infura.io/v3/YOUR_INFURA_KEY

# Private Keys (DO NOT commit these to version control)
# Use for local development and testing only
DEPLOYER_PRIVATE_KEY=your_private_key_here_for_testing_only
TEST_PRIVATE_KEY_1=another_test_private_key
TEST_PRIVATE_KEY_2=yet_another_test_private_key

# Testing Configuration
# Which network to use for integration tests
TEST_NETWORK=sepolia

# Enable/disable Defender API mocking for tests
ENABLE_DEFENDER_MOCKING=true

# Test timeout in milliseconds
TEST_TIMEOUT=300000

# Gas Configuration
# Maximum gas price in Gwei
MAX_GAS_PRICE=100

# Maximum gas limit for transactions
MAX_GAS_LIMIT=8000000

# Gas price multiplier for urgent transactions
GAS_PRICE_MULTIPLIER=1.2

# Contract Verification
# Etherscan API keys for contract verification
ETHERSCAN_API_KEY=your_etherscan_api_key
POLYGONSCAN_API_KEY=your_polygonscan_api_key
ARBISCAN_API_KEY=your_arbiscan_api_key
OPTIMISTIC_ETHERSCAN_API_KEY=your_optimistic_etherscan_api_key

# Deployment Configuration
# Enable automatic approval of Defender proposals
AUTO_APPROVE_DEFENDER_PROPOSALS=false

# Enable contract verification after deployment
AUTO_VERIFY_CONTRACTS=true

# Enable verbose logging during deployment
VERBOSE_DEPLOYMENT=true

# Delay between deployment steps (in milliseconds)
DEPLOYMENT_STEP_DELAY=5000

# Maximum number of retry attempts for failed operations
MAX_RETRY_ATTEMPTS=3

# Monitoring and Alerts
# Webhook URL for deployment notifications
DEPLOYMENT_WEBHOOK_URL=https://hooks.slack.com/your/webhook/url

# Email for deployment notifications
DEPLOYMENT_NOTIFICATION_EMAIL=your-email@example.com

# Development Configuration
# Enable debug mode
DEBUG=false

# Log level (error, warn, info, debug)
LOG_LEVEL=info

# Cache directory for compilation artifacts
CACHE_DIR=.cache

# Temporary directory for test artifacts
TEMP_DIR=.tmp
