{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": false,
    "target": "ES2022",
    "module": "node16",
    "lib": [
      "ES2022",
      "DOM"
    ],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "downlevelIteration": true,
    "moduleResolution": "node16"
  },
  "include": [
    "./src/**/*",
    "./scripts/**/*",
    "archives/scripts/defender-cli.ts"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "notes",
    "notes-local",
    ".tmp-*",
    "test",
    "scripts"
  ]
}