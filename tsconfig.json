{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": false,
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["ES2022", "DOM"],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "downlevelIteration": true,
    "moduleResolution": "node",
    "composite": true
  },
  "include": ["./src/**/*"],
  "exclude": [
    "archives",
    "dist",
    "node_modules",
    "notes",
    "notes-local",
    ".tmp-*",
    "test",
    "scripts"
  ]
}
