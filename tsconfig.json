{
  "compilerOptions": {
    "composite": true,
    "allowJs": true,
    "checkJs": false,
    "baseUrl": "./",
    
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["ES2022", "DOM"],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "strict": true,
    "rootDirs": ["./src", "./test"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "downlevelIteration": true,
    "moduleResolution": "node"
  },
  "include": [
    "./src/**/*",
    "./test/**/*",
    "./scripts/**/*",
    "./types/**/*",
    "./docs/**/*"
  ],
  "exclude": ["dist", "node_modules", "notes", "notes-local", ".tmp-*"]
}
