{
  "compilerOptions": {
    "composite": true,
    "allowJs": true,
    "checkJs": false,
    "baseUrl": "./",
    
    "target": "ES2018",
    "module": "commonjs",
    "lib": ["ES2019"],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "strict": true,
    "rootDirs": ["./src", "./test"],
    "esModuleInterop": true,
    "types": ["node", "@nomiclabs/hardhat-ethers"],
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": [
    "./src/**/*",
    "./test/**/*",
    "./scripts/**/*"
  ],
  "exclude": ["dist", "node_modules", "notes", "notes-local", ".tmp-*"]
}
